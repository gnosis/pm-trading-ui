---
useFlexbox: true
styles:
  grid: true
  buttons: true
  mixins: true
  media: true
  tables: true
scripts: false
styleLoaders:
- style-loader
- css-loader?sourceMap
- postcss-loader?sourceMap
- sass-loader?sourceMap
appStyles: ./src/scss/style.scss
bootstrapVersion: 3
env:
  production:
    extractStyles: true
    styleLoaders:
    - css-loader
    - postcss-loader
    - sass-loader
  development:
    styleLoaders:
    - style-loader
    - css-loader?sourceMap
    - postcss-loader?sourceMap
    - sass-loader?sourceMap
  
